<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_on__buy"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kiit.klx.Activities.On_Buy">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ScrollView>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:weightSum="100"
        android:gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/CARDVIEW_ID"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="100"
                android:layout_weight="100"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="70"
                    android:orientation="vertical"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="49.5"
                        android:gravity="center"
                        android:weightSum="100"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        android:layout_height="0dp">



                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="40"
                            android:maxHeight="@dimen/ImageSize"
                            android:maxWidth="@dimen/ImageSize"
                            android:scaleType="fitXY"
                            android:background="@mipmap/ic_photo_camera_black_24dp"
                            android:id="@+id/IMAGE_1_ON_BUY"
                            android:layout_height="140dp" />


                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>



                        <ImageView
                            android:layout_width="0dp"
                            android:layout_weight="40"
                            android:scaleType="fitXY"
                            android:maxHeight="@dimen/ImageSize"
                            android:maxWidth="@dimen/ImageSize"
                            android:background="@mipmap/ic_photo_camera_black_24dp"
                            android:id="@+id/IMAGE_2_ON_BUY"
                            android:layout_height="140dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_weight="49.5"
                        android:weightSum="100"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal"
                        android:layout_height="0dp">

                        <ImageView

                            android:scaleType="fitXY"
                            android:layout_width="0dp"
                            android:layout_weight="40"
                            android:maxHeight="@dimen/ImageSize"
                            android:maxWidth="@dimen/ImageSize"

                            android:background="@mipmap/ic_photo_camera_black_24dp"
                            android:id="@+id/IMAGE_3_ON_BUY"
                            android:layout_height="140dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>


                        <ImageView


                            android:scaleType="fitXY"
                            android:background="@mipmap/ic_photo_camera_black_24dp"
                            android:layout_width="0dp"
                            android:layout_weight="40"
                            android:maxHeight="@dimen/ImageSize"
                            android:maxWidth="@dimen/ImageSize"
                            android:id="@+id/IMAGE_4_ON_BUY"
                            android:layout_height="140dp" />



                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="20"
                    android:weightSum="100"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:orientation="vertical"
                        android:weightSum="100"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:text="PRICE :"
                            android:textSize="@dimen/TextSizeProductShow"
                            android:layout_weight="20"
                            android:layout_height="0dp" />

                        <TextView
                            android:textSize="@dimen/TextSizeProductShow"
                            android:layout_weight="20"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:text="PRODUCT NAME :"
                            android:layout_height="0dp" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_weight="20"
                            android:gravity="center"
                            android:layout_height="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="DESCRIPTION :"
                                android:textSize="@dimen/TextSizeProductShow"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="20"
                            android:weightSum="100"
                            android:layout_height="0dp">

                            <TextView
                                android:layout_width="0dp"
                                android:text="Seller Name"
                                android:layout_weight="40"
                                android:textSize="10sp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/SELLER_ID"
                                android:layout_width="0dp"
                                android:textSize="12sp"
                                android:layout_weight="60"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_weight="20"
                            android:weightSum="100"
                            android:layout_height="0dp">


                            <TextView
                                android:layout_width="0dp"
                                android:text="Seller Number"
                                android:layout_weight="40"
                                android:textSize="10sp"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/SELLER_MOBILE"
                                android:layout_width="0dp"
                                android:layout_weight="60"
                                android:textSize="12sp"
                                android:layout_height="match_parent" />


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="50"
                        android:orientation="vertical"
                        android:weightSum="100"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/PRODUCT_PRICE_ID_ON_BUY"
                            android:layout_width="match_parent"
                            android:gravity="start"
                            android:layout_weight="20"
                            android:layout_height="0dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="start"
                            android:id="@+id/PRODUCT_NAME_ID_ON_BUY"
                            android:layout_weight="20"
                            android:layout_height="0dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:gravity="start"
                            android:text="DUgdeu"
                            android:id="@+id/PRODUCT_DESCRIPTION_ID_ON_BUY"
                            android:layout_weight="60"
                            android:layout_height="0dp" />





                    </LinearLayout>

                </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                    android:weightSum="100"
                   android:layout_weight="10"
                   android:layout_height="0dp">

                   <Button
                       android:layout_weight="50"
                       android:background="#000"
                       android:text="ADD TO BAG"
                       android:textColor="#fff"
                       android:id="@+id/BAG_ON_BUY"
                       android:layout_width="0dp"
                       android:layout_marginBottom="1dp"
                       android:layout_height="match_parent" />

                   <View
                       android:layout_width="0dp"
                       android:layout_weight="1"
                       android:layout_height="match_parent"/>

                   <Button
                       android:layout_weight="48"
                       android:background="#000"
                       android:id="@+id/BUY_NOW_ON_BUY"
                       android:text="CONTACT SELLER"
                       android:textColor="#fff"
                       android:layout_width="0dp"
                       android:layout_marginBottom="1dp"
                       android:layout_height="match_parent" />


               </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>






    </LinearLayout>

</RelativeLayout>
